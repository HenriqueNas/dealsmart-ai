{
  "name": "dealsmart-ai",
  "version": "0.1.0",
  "private": true,
  "author": "@henriquenas",
  "license": "MIT",
  "type": "module",
  "scripts": {
    "dev": "pnpm services:up && ./infra/wait-for.sh localhost 5432 && pnpm migration:up && next dev",
    "lint:check": "prettier --check .",
    "lint:fix": "prettier --write .",
    "test": "pnpm jest --runInBand",
    "test:watch": "pnpm jest --watch --runInBand",
    "services:up": "docker-compose -f infra/compose.yaml up -d",
    "services:stop": "docker-compose -f infra/compose.yaml stop",
    "services:down": "docker-compose -f infra/compose.yaml down",
    "migration:create": "prisma migrate dev --create-only --name",
    "migration:up": "prisma migrate deploy",
    "migration:generate": "prisma generate"
  },
  "dependencies": {
    "@prisma/adapter-pg": "^7.3.0",
    "@prisma/client": "^7.3.0",
    "dotenv": "^16.6.1",
    "dotenv-expand": "^12.0.3",
    "next": "16.1.6",
    "pg": "^8.17.2",
    "prisma": "^7.3.0",
    "react": "19.2.3",
    "react-dom": "19.2.3"
  },
  "devDependencies": {
    "@jest/globals": "^29.7.0",
    "@tailwindcss/postcss": "^4.1.18",
    "@testing-library/dom": "^10.4.1",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.2",
    "@types/jest": "^29.5.14",
    "@types/node": "20.6.2",
    "@types/pg": "^8.16.0",
    "@types/react": "18.2.21",
    "@types/react-dom": "^18.3.7",
    "autoprefixer": "^10.4.23",
    "eslint": "^9.39.2",
    "eslint-config-next": "16.1.6",
    "jest": "^29.7.0",
    "postcss": "^8.5.6",
    "prettier": "^2.8.8",
    "tailwindcss": "^4.1.18",
    "ts-jest": "^29.4.6",
    "ts-node": "^10.9.2",
    "tsx": "^4.21.0",
    "typescript": "5.2.2"
  },
  "peerDependencies": {
    "typescript": "^5.0.0"
  }
}
